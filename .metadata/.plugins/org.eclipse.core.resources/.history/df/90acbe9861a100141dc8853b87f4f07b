#include <stdio.h>
#include <sys/wait.h>

const unsigned int MAXLINE = 1024;

int main(int argc, char *argv[])
{
	char buf[MAXLINE];
	pid_t pid;
	int status;

	while ( (c = getc(stdin) ) != EOF )
	{
		if( putc(c, stdout) == EOF)
		{
			perror("putc");
			return 1;
		}
	}
	if(ferror(stdin))
	{
		perror("getc");
		return 1;
	}

	return 0;
}
